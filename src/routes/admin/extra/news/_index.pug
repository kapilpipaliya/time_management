//- pug
ShowError(er='{$er}')
Add(on:click='{c.onNewClick}')
Table.table.table-border.row-border(data='{$data}' filters='{filters}' pageSize='{pageSize}' currentPage='{currentPage}' selectedClass='secondary')
  thead(slot='head')
    th Edit
    th Project
    th Title
    th Summery
    th Description
    th Author
    th Comments count
  tbody(slot='body' let:displayData='{displayData}')
    +each('displayData as row')
      Tr({row})
        TdEdit(row='{row}' on:click='{c.onEditClick(row)}')
        TdDelete(on:click='{c.deleteClick(row)}')
        td {row.getProject()}
        td {row.getTitle()}
        td {row.getSummery()}
        td {row.getDescription()}
        td {row.getAuthor()}
        td {row.getCommentsCount()}
Pagination({totalPages} bind:currentPage='{currentPage}')

//- pug_end
