TitleBar(title='{title}' breadcrumbs='{breadcrumbs}')
+if('showForm')
  .m-3
    .row
      .bg-white.p-4.m-2
        Form(schema='{schema}' initialValues='{$initialValues}' on:submit='{c.handleSubmit}'  let:isSubmitting let:isValid)
          .row.mb-3
            .cell-md-12.d-none
              label Uid
              Input(type='text' name='uid' )
            .cell-md-6
              label Name
              Input(type='text' name='name' )
            .cell-md-6
              label Position
              Input(type='number' name='position' )
            .cell-md-6
              label Is In Roadmap
              Input(type='checkbox' name='is_in_roadmap' )
            .cell-md-6
              label Is Milestone
              Input(type='checkbox' name='is_milestone' )
            .cell-md-6
              label Is Default
              Input(type='checkbox' name='is_default' )
            .cell-md-6
              label Is Standard
              Input(type='checkbox' name='is_standard' )
            .cell-md-6
              label Color
              Input(type='text' name='color' )
            .cell-md-6
              label Attribute Groups
              Input(type='text' name='attribute_groups' )
            .cell-md-6
              label Description
              Input(type='text' name='description' )
          button.button.primary(type='submit' disabled='{isSubmitting || !isValid}') Submit
          button.button.secondary.ml-1(type='button' on:click='{c.goBack}') Cancel
          ShowError(er='{$er}')
